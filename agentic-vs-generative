        }
        .toggle-bg:after {
            content: '';
            @apply absolute top-1 left-1 bg-white border border-gray-300 rounded-full h-7 w-7 transition-transform;
        }
        input:checked + .toggle-bg:after {
            transform: translateX(100%);
            border-color: #4A90E2;
        }
        input:checked + .toggle-bg {
            @apply bg-blue-500;
        }
